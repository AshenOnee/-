                                    li.input-city-select-item
                                        +e.input-city-select-name Читато (Ангола)
                                        +e.input-city-select-abbreviation PGA
                            +e.input-date
                                input(type='text', placeholder='Дата вылета', autocomplete='off', readonly="readonly")#dispatch-date.input-date-field
                        +e.flight-column
                            +e.city-lable Город назначения
                            +e.input-city
                                input(type='text', placeholder='Куда', autocomplete='off')#arrival-city.input-city-field
                                +e.input-city-ico
                                ul#arrival-city-select.input-city-select
                                    li.input-city-select-item
