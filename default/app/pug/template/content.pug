                                select#select-adults
                                    option(value="0" style="display:none") Взрослые
                                    - for(var i = 1; i <= 5; i++)
                                      option( value = i ) #{i}
                                select#select-children
                                    option(value="0" style="display:none") Дети
                                    - for(var i = 1; i <= 5; i++)
                                      option( value = i ) #{i}
                                select#select-babies
                                    option(value="0" style="display:none") Младенцы
                                    - for(var i = 1; i <= 5; i++)
                                      option( value = i ) #{i}
